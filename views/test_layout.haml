  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title= @title
    %meta{:content => "width=device-width", :name => "viewport"}
    %link{:href => "http://fonts.googleapis.com/css?family=Arvo:400,700", :rel => "stylesheet"}
    %link{:href => "//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css", :rel => "stylesheet"}
    %link{ :rel => 'stylesheet', :type => 'text/css', :href => "/mi6.theme/css/js-test-suite.css" }

    - jasmine_path = '/mi6.theme/jasmine/'

    %link{ :rel => 'shortcut icon', :type => 'image/png', :href => "#{jasmine_path}lib/jasmine-2.0.0/jasmine_favicon.png" }
    %link{ :rel => 'stylesheet', :type => 'text/css', :href => "#{jasmine_path}lib/jasmine-2.0.0/jasmine.css" }

    - ['jasmine.js', 'jasmine-html.js', 'boot.js'].each do |script|
      %script{ :type => 'text/javascript', :src => "#{jasmine_path}lib/jasmine-2.0.0/#{script}" }

    %script{ :type => 'text/javascript', :src => '//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js' }
    %script{ :type => 'text/javascript', :src => '//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js' }
    %script{ :type => 'text/javascript', :src => "#{jasmine_path}helpers/jasmine-jquery.js" }

    / Source files
    %script{ :type => 'text/javascript', :src => "/mi6.theme/js/jquery.magnific-popup-0.9.9-min.js" }
    %script{ :type => 'text/javascript', :src => "/mi6.theme/js/main.js" }


    / Spec files
    %script{ :type => 'text/javascript', :src => "#{jasmine_path}spec/ContactFormSpec.js" }
    %script{ :type => 'text/javascript', :src => "#{jasmine_path}spec/XPGraphSpec.js" }
    %script{ :type => 'text/javascript', :src => "#{jasmine_path}spec/TimelineSpec.js" }

    - local_stylesheet_link_tag('local')

